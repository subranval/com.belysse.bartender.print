<mvc:View controllerName="com.belysse.bartender.print.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" 	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
	<customHeader>
	<Bar>
	<contentMiddle>
	<Title text="{i18n>title}"/>
	</contentMiddle>
	<contentRight>
	<Button text ="{i18n>clearValue}" press="onResetValue"/>
	</contentRight>
	</Bar>
	</customHeader>
    	<f:SimpleForm
			editable="true"
			layout="ResponsiveGridLayout"
			title=""
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="true" >
			<f:content>
				<Label text="{i18n>labelGroup}" required="true"/>
				<Select items="{oViewModel>/LabelGroupData}" selectedKey="{oViewModel>/LabelGroupValue}" forceSelection="false" change="onSelectLabelGroup">
				<core:Item key="{oViewModel>LabelGroup}" text="{oViewModel>LabelGroup}"/>
				</Select>
				<Label text="{i18n>labelType}" required="true"/>
				<Select items="{oViewModel>/LabelTypeData}" selectedKey="{oViewModel>/LabelTypeValue}" forceSelection="false" change="onSelectLabelType">
				<core:Item key="{oViewModel>LabelType}" text="{oViewModel>LabelType}"/>
				</Select>
				<Label text="{i18n>plant}" required="true"/>
				<Input showValueHelp="true" value="{oViewModel>/PlantValue}" valueHelpRequest="openPlantVH"/>
                <Label text="{i18n>printer}" required="true"/>
				<Select/>
                <Label text="{i18n>documentType}" required="true"/>
				<Select items="{oViewModel>/DocTypeData}" forceSelection="false" selectedKey="{oViewModel>/DocTypeValue}" change="onSelectDocType">
				<core:Item key="{oViewModel>DocumentType}" text="{oViewModel>DocumentType}"/>
				</Select>
				<Label text="{i18n>documentNumber}" required="true"/>
					<MultiInput id="DocTypeInput"
			
			suggestionItems="{
				path: '/ZI_DocumentNumberVH',
				sorter: { path: 'DocumentNumber' }
			}"
			valueHelpRequest="openDocumentNoVH">
			<core:Item key="{DocumentNumber}" text="{DocumentNumber}" />
		</MultiInput>
                <Label text="{i18n>HUNumber}" visible="{oViewModel>/HUFieldVisible}"/>
				<MultiInput id="HUInput" visible="{oViewModel>/HUFieldVisible}"
			
			suggestionItems="{
				path: '/I_HandlingUnitHeader',
				sorter: { path: 'HandlingUnitExternalID' }
			}"
			valueHelpRequest="openHUNoVH">
			<core:Item key="{HandlingUnitExternalID}" text="{HandlingUnitExternalID}" />
		 </MultiInput>
                <Label text="{i18n>batchNumber}" visible="{oViewModel>/BatchFieldVisible}"/>
				<MultiInput id="BatchInput" visible="{oViewModel>/BatchFieldVisible}"
			
			suggestionItems="{
				path: '/I_Batch',
				sorter: { path: 'Batch' }
			}"
			valueHelpRequest="openBatchVH">
			<core:Item key="{Batch}" text="{Batch}" />
		 </MultiInput>
                <Label text="{i18n>materialNumber}" visible="{oViewModel>/MaterialVisible}"/>
				<MultiInput id="MaterialInput" visible="{oViewModel>/MaterialVisible}"
			
			suggestionItems="{
				path: '/ZI_ProductVH',
				sorter: { path: 'Product' }
			}"
			valueHelpRequest="openMaterialVH">
			<core:Item key="{Product}" text="{Product}" />
		 </MultiInput>
                 <Label text="{i18n>NOOfLabels}" required="true"/>
				<Input value="{oViewModel>/NumberOfLabelsValue}"/>
			</f:content>
		</f:SimpleForm>
        	<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button text="{i18n>exceute}" type="Emphasized" press="onExecute"/>
				
			</OverflowToolbar>
		</footer>
    </Page>
</mvc:View>